@using ECommerceProject.Core.Enums
@model ECommerceProject.AdminUI.Models.Order.ListOrdersViewModel


<div class="modal" tabindex="-1" role="dialog" id="UpdateOrderState">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Update Order</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="Edit" asp-controller="Order" aabbdd >
                    @Html.HiddenFor(x => x.OrderId)
                    
                        <select asp-for="OrderState" asp-items="Html.GetEnumSelectList<EnumOrderState>()" class="form-control">
                            <option selected="selected" value="">Please select</option>
                        </select>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-save="modal">Save changes</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

