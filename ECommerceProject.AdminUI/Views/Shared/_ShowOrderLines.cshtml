
@model IEnumerable<ECommerceProject.AdminUI.Models.Order.ShowOrderLinesViewModel>
@{
    Layout = null;
    ViewData["Title"] = "Show Order Lines";
}



<div class="modal" tabindex="-1" role="dialog" id="UpdateOrderState">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Update Order</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Product Name</th>
                                <th>Quantity</th>
                                <th>Price</th>
                            </tr>
                        </thead>
                        <tbody>

                        @foreach (var orderLine in Model)
                        {
                            <tr>
                                @Html.HiddenFor(x => orderLine.OrderId)

                                <td>@orderLine.ProductName</td>

                                <td> @orderLine.Quantity</td>

                                <td>@orderLine.Price.ToString("C")</td>
                            </tr>

                        }
                       
                        </tbody>
                       
                    </table>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
