@model ECommerceProject.AdminUI.Models.Category.AddCategoryViewModel
@{
    ViewData["Title"] = "AddSubCategory";
}

<form class="form-group" method="post" asp-controller="Category" asp-action="AddSubCategory">
    <input asp-for="ParentCategoryId" hidden/>
    <input asp-for="CategoryId" hidden/>
    <div class="form-control">
        <label>Title</label>
        <input asp-for="Title"/>
    </div>
    <button type="submit" value="submit">Submit</button>
</form>

