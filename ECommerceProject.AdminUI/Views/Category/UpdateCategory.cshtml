@model ECommerceProject.AdminUI.Models.Category.AddCategoryViewModel
@{
    ViewData["Title"] = "UpdateCategory";
}

<form class="form-group" asp-controller="Category" asp-action="UpdateCategory" method="post">
    <input asp-for="CategoryId" hidden/>
    <div class="form-control">
        <label>Title</label>
        <input asp-for="Title"/>
    </div>
    <button type="submit" value="submit" class="btn btn-sm btn-primary">Submit</button>
</form>

