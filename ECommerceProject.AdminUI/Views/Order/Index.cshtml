@model IEnumerable<ECommerceProject.AdminUI.Models.Order.ListOrdersViewModel>
@{
    Layout = Layout;
}
@section scripts {
    <script>
        
        showInPopupOrders = (url, title) => {
            $.ajax({
                type: "GET",
                url: url,
                success: function(res) {
                    $("#form-modal .modal-body").html(res);
                    $("#form-modal .modal-title").html(title);
                    $("#form-modal").modal("show");
                },
                error: function() {
                    alert("didn't work");
                }
            });
        }
    </script>
}
<button type="button" class="btn btn-success" data-toggle="ajax-modal" data-target="#PopupOrder" data-ur="@Url.Action("Edit")">Update</button>

<table class="table table-striped table-sm">
    <tr>
        <th>Order Number</th>
        <th>Username</th>
        <th>Order State</th>
        <th>Order Date</th>
        <th>Total</th>
    </tr>
    @if (Model != null)
    {
        @foreach (var x in Model)
        {

    <tr>


    <td>@x.OrderNumber</td>


    <td>@x.UserName</td>


    <td>@x.OrderState      </td> 
  
   
  
   
    @if ((DateTime.Today.Day- x.OrderDate.Day) >= 7 )
    {
        <td style="color: red">@x.OrderDate.ToShortDateString()</td>
    }

    @if ((DateTime.Today.Day - x.OrderDate.Day) >= 4 && (DateTime.Today.Day - x.OrderDate.Day) <= 6)
    {
        <td style="color: orange">@x.OrderDate.ToShortDateString()</td>
    }

    @if ((DateTime.Today.Day - x.OrderDate.Day) <= 3)
    {
        <td style="color: green">@x.OrderDate.ToShortDateString()</td>
    }




    <td>@x.Total.ToString("C")</td>

</tr>

        }
    }
    else
    {
        <tr>
            <td colspan="3" class="text-center"> <p><b>There is not any order.</b></p></td>
        </tr>

    }

</table>