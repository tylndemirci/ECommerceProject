@model ECommerceProject.AdminUI.Models.Product.AddProductViewModel
@{
    ViewData["Title"] = "AddProduct";
}

    <form asp-controller="Product" asp-action="Add" method="post" enctype="multipart/form-data">
        <input asp-for="ProductId" hidden />
        <div class="form-group">
            <label asp-for="ProductName">Product Name</label>
            <input asp-for="ProductName" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="SubCategoryId">Sub Category</label>
            <select asp-for="SubCategoryId" asp-items="@(new SelectList(ViewBag.categories, "Id", "Title"))">
                <option disabled>Select a Category</option>
            </select>
        </div>
        <div class="form-group">
            <label asp-for="Price">Price</label>
            <input asp-for="Price" class="form-control"/> Dollar(s)
        </div>
        <div class="form-group">
            <label asp-for="ImageUrl">Image</label>
            <input type="file" name="file" id="file" asp-for="ImageUrl" class="form-control"/>
        </div>
        <div class="form-group"></div>
        <button class="btn btn-sm btn-success">Submit</button>
    </form>

