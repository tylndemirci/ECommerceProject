@model ECommerceProject.AdminUI.Models.Product.AddMainProductModel
@{
    ViewData["Title"] = "Add Product";
    Layout = Layout;
}

@section scripts {
    <script>
        function myFunction() {

            $("#product-detail-row").append('<label asp-for="ProductDetailsTitle">Title</label><input name="ProductDetailsTitle" class="form-control" /><label asp-for="ProductDetailsDescription">Description</label><input name="ProductDetailsDescription"/> <input type="hidden" value="ProductDetailsId" />');
        }
    </script>


}

<form asp-controller="Product" asp-action="AddProduct" method="post" enctype="multipart/form-data" class="m-5">
    <div class="form-group">
        <label asp-for="ProductName">Product Name</label>
         @Html.TextBoxFor(x=>x.ProductName,new {placeholder="Product Name", @class = "form-control"} )
        @Html.ValidationMessageFor(m => m.ProductName)
    </div>
    <div class="form-group">
        <label asp-for="CategoryId">Category Name</label>
        @Html.DropDownListFor(x => x.CategoryId, Model.Categories, "Select a Category", new {@class = "form-control"})
        @Html.ValidationMessageFor(m => m.CategoryId)
    </div>
    <div class="form-group">
        <label asp-for="Price">Price</label>
        @Html.TextBoxFor(x=>x.Price,new {placeholder="Price",type="number", @class = "form-control"} ) Dollar(s)
        @Html.ValidationMessageFor(m => m.Price)
    </div>
    <div class="form-group">
        <label asp-for="ImageUrl">Image</label>
         <input type="file" name="file" id="file" asp-for="ImageUrl" class="form-control-file"/>
        @Html.ValidationMessageFor(m => m.ImageUrl)
    </div>


    <div class="container">
        <div class="row">
            <div class="form-group" id="product-detail-row">

            </div>
        </div>


    </div>


    <input type="button" onclick="myFunction()" href="#" value="Add Detail"/>


    <div class="form-group">
        <button class="btn btn-sm btn-success">Submit</button>
    </div>
</form>