@model ECommerceProject.AdminUI.Models.Product.AddProductViewModel
@{
    ViewData["Title"] = "AddProduct";
}

    <form asp-controller="Product" asp-action="AddProduct" method="post" enctype="multipart/form-data">
        <input asp-for="ProductId" hidden />
        <div class="form-group">
            <label asp-for="ProductName">Product Name</label>
            <input asp-for="ProductName" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="CategoryName">Category Name</label>

            @Html.DropDownListFor(x=>x.CategoryId, Model.Categories,"Select a Category",new { @class="form-control" })

        </div>
        <div class="form-group">
            <label asp-for="Price">Price</label>
            <input asp-for="Price" class="form-control"/> Dollar(s)
        </div>
        <div class="form-group">
            <label asp-for="ImageUrl">Image</label>
            <input type="file" name="file" id="file" asp-for="ImageUrl" class="form-control"/>
        </div>
        <div class="form-group"></div>
        <button class="btn btn-sm btn-success">Submit</button>
    </form>

