@model ECommerceProject.AdminUI.Models.Product.UpdateProductViewModel
@{
    ViewData["Title"] = "EditProduct";
}
@section scripts {
    <script src="~/lib/ckeditor5/ckeditor.js"></script>
    <script>
        CKEDITOR.replace("Description");
    </script>
}

<form asp-controller="Product" asp-action="EditProduct" method="post" enctype="multipart/form-data">
    <input asp-for="ProductId" hidden />
    <input asp-for="ImageUrl" hidden />
    <div class="form-group">
        <label asp-for="ProductName">Product Name</label>
        <input asp-for="ProductName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="CategoryName">Category Name</label>
        <select asp-for="CategoryName" asp-items="@(new SelectList(ViewBag.categories, "Id", "Title"))">
            <option disabled>Select a Category</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Price">Price</label>
        <input asp-for="Price" class="form-control"/> Dollar(s)
    </div>
    <div class="form-group">
        <label asp-for="ImageUrl">Image</label>
        @if (Model.ImageUrl!=null)
        {
            <img src="~/productimages/@Model.ImageUrl" width="50"/>
        }
      
        <input type="file" name="file" id="file" asp-for="ImageUrl" class="form"/>
    </div>
    <div class="form-group">
        <label asp-for="Description">Product Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <button class="btn btn-sm btn-success">Submit</button>
</form>

