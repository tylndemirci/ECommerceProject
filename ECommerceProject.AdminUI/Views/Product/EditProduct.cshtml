@model ECommerceProject.AdminUI.Models.Product.UpdateProductViewModel
@{
    ViewData["Title"] = $"Update Product '{Model.ProductName}' ";
    Layout = Layout;
}
@section scripts {
    <script src="~/lib/ckeditor/ckeditor.js"></script>
    <script>
        CKEDITOR.replace("Description");
    </script>
    <script>

    </script>
}

<form asp-controller="Product" asp-action="EditProduct" method="post" enctype="multipart/form-data" class="m-5">
    <input asp-for="ProductId" hidden />
    <input asp-for="ImageUrl" hidden />
    <div class="form-group">
        <label asp-for="ProductName">Product Name</label>
        <input asp-for="ProductName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="CategoryId">Category Name</label>
        @Html.DropDownListFor(x=>x.CategoryId, Model.Categories,"Select a Category",new { @class="form-control" })
    </div>
    <div class="form-group">
        <label asp-for="Price">Price</label>
        <input asp-for="Price" class="form-control"/> Dollar(s)
    </div>
    <div class="file-field">
        <label asp-for="ImageUrl">Image</label>
        @if (Model.ImageUrl!=null)
        {
            <img src="~/productimages/@Model.ImageUrl" width="50" alt="@Model.ProductName"/>
        }
      
        <input type="file" name="file" id="file" asp-for="ImageUrl" class="form-control-file"/>
    </div>
    <br/>
    
    <div class="form-check">
        <input asp-for="IsFeatured" class="form-check-input">
        <label class="form-check-label" asp-for="IsFeatured">Show as featured</label>
    </div>
    <br/>
    <div class="form-group">
        <label asp-for="Description">Product Description</label>
        <textarea  asp-for="Description" class="form-control"></textarea>
    </div>
    <button class="btn btn-sm btn-success">Submit</button>
</form>

