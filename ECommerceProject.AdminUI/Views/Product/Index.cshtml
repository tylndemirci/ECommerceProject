@model IEnumerable<ECommerceProject.AdminUI.Models.Product.ListAllProductsViewModel>
@{
    ViewData["Title"] = "Product List";
}



<a class="btn btn-primary m-1" asp-controller="Product" asp-action="AddProduct">Add Product</a>
    <table class="table-striped table table-sm text-center font-weight-bold">
        <tr>
            <th>Product Id</th>
            <th>Product Name</th>
            <th>Product Color</th>
            <th>Count</th>
            <th>Is Approved</th>
            <th>Is Featured</th>
            <td>Is Stock</td>
            <th>Price</th>
            <th>Sub Category Name</th>
            <th>Image</th>
            @* <th>Description</th> *@
            <th>Options</th>
           

        </tr>

        @foreach (var product in Model)
        { 
    <tr>
        <td>@product.ProductId</td>
        <td>@product.ProductName</td>
        <td>@product.ProductColor</td>
        <td>@product.Count</td>
        <td>@product.IsApproved</td>
        <td>@product.IsFeatured</td>
        <td>@product.IsStock</td>
        <td @*id="priceOfProduct"*@>@product.Price.ToString("C")</td>
        <td>@product.CategoryName</td>
        <td><img src="~/productimages/@product.ImageUrl" width="50"  /></td>
        @* <td>@Html.Raw(product.Description)</td> *@
        <td><a asp-controller="Product" asp-action="EditProduct" asp-route-id="@product.ProductId" class="btn btn-success">Edit</a>
            <a asp-controller="Product" asp-action="EditProductDetail" asp-route-productId="@product.ProductId" class="btn  btn-primary">Product Detail Options</a>
            <a asp-controller="Product" asp-action="DeleteProduct" asp-route-id="@product.ProductId" class="btn btn-danger">Delete</a></td>
        <td></td>

    </tr>
        }
    </table>

