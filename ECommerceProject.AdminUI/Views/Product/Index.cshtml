@model IEnumerable<ECommerceProject.AdminUI.Models.Product.ListAllProductsViewModel>
@{
    ViewData["Title"] = "Index";
}
<a class="button btn-sm btn-primary" asp-controller="Product" asp-action="AddProduct">Add Product</a>
    <table class="table-striped table table-sm">
        <tr>
            <th>Product Id</th>
            <th>Product Name</th>
            <th>Product Color</th>
            <th>Count</th>
            <th>Is Approved</th>
            <th>Is Featured</th>
            <th>Price</th>
            <th>Sub Category Name</th>
        </tr>

        @foreach (var product in Model)
        { 
            <tr>
                <td>@product.ProductId</td>
                <td>@product.ProductName</td>
                <td>@product.ProductColor</td>
                <td>@product.Count</td>
                <td>@product.IsApproved</td>
                <td>@product.IsFeatured</td>
                <td>@product.IsStock</td>
                <td>@product.Price</td>
                <td>@product.SubCategoryId</td>
                <td><img src="~/productimages/@product.ImageUrl"/></td>
            </tr>
        }
    </table>

