@model ECommerceProject.WebUI.Models.MyAccount.ChangePasswordViewModel
<div class="container">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <div class="text-danger" asp-validation-summary="All"></div>
        <form asp-controller="Account" asp-action="ChangeMyPassword" method="post">
            <input asp-for="Id" hidden />

            <div class="form-group">
                <label asp-for="OldPassword">Old Password</label>
                <input asp-for="OldPassword" class="form-control" required />

            </div>
            <div class="form-group">
                <label asp-for="NewPassword">New Password</label>
                <input asp-for="NewPassword" class="form-control" required />


            </div>
            <div class="form-group">
                <label asp-for="NewPasswordToCheck">New Password</label>
                <input asp-for="NewPasswordToCheck" class="form-control" required />


            </div>
            <button type="submit" value="submit" class="btn btn-success">Change My Password</button>
        </form>
    </div>
    <div class="col-md-4"></div>
</div>

 