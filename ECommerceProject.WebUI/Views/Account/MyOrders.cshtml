@model ECommerceProject.WebUI.Models.MyAccount.MyOrdersViewModel
<div class="container">
    <div class="row">
        <div class="col">
            @if (Model.OrderId != null)
            {
                @for (int i = 0; i < Model.OrderId.Count; i++)
                {
                    <div class="row">
                        <div class="col-md-4">@Model.OrderId[i]</div>
                        <div class="col-md-4"></div>
                        <div class="col-md-4">@Model.OrderDate[i]</div>
                        <div class="row">
                            <div class="col-4">@Model.ProductName[i]</div>
                            <div class="col-4">@Model.Quantity[i]</div>
                            <div class="col-4">@Model.Price[i]</div>
                        </div>
                    </div>
                }
           
        }
            else
            {
                <div class="text-center" style="margin-top: 50px" >
                    <b>You have no orders.</b>
                </div>
            }
        </div>
    </div>

</div>