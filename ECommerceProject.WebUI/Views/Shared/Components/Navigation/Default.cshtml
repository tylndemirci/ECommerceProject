@model IEnumerable<ECommerceProject.WebUI.Models.ViewComponent.NavigationViewModel>
<!-- NAVIGATION -->
<nav id="navigation">
    <!-- container -->
    <div class="container">
        <!-- responsive-nav -->
        <div id="responsive-nav">
            <!-- NAV -->
            <ul class="main-nav nav navbar-nav">
                @if (Model != null)
                {
                   

                
                    @foreach (var nav in Model)
                    {
                        if (nav.IsSubCategory == false) 
                        {
                <li><a asp-controller="Product" asp-action="ListCategoryProducts" asp-route-categoryId="@nav.Id" asp-route-pageIndex="1">@nav.Title</a></li>
                        }
                        
                    }
                }



            </ul>
            <!-- /NAV -->
        </div>
        <!-- /responsive-nav -->
    </div>
    <!-- /container -->
</nav>
<!-- /NAVIGATION -->